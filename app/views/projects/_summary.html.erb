<div class="project_header">
  <%= link_to "#{project.username} / #{project.name}", "/#{project.username}/#{project.name}", class: "project_title" %>
  <% severities = project.severity_counts %>
  <ul class="severities">
    <li class="severity_fatal"><%= severities[:fatal] || 0 %></li>
    <li class="severity_error"><%= severities[:error] || 0 %></li>
    <li class="severity_warning"><%= severities[:warning] || 0 %></li>
    <li class="severity_convention"><%= severities[:convention] || 0 %></li>
    <li class="severity_refactor"><%= severities[:refactor] || 0 %></li>
  </ul>
</div>
<p class="project_description"><%= project.description %></p>
